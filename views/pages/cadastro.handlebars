<link rel="stylesheet" href="/public/styles/styleGeral.css">
<style>
    #msg-cad-status{
        position: fixed;
        width: 100%;
        background: orange;
        color: white;
        top: 0;
        text-align: center;
        font-family: sans-serif;
        font-size: 14pt;
    }    
</style>
<div id="cadastro">
    {{#if userExistent}}
    <div id="msg-cad-status">usuário existente! cadastre outro email</div>
    {{/if}}
    {{#if existentCpf}}
    <div id="msg-cad-status">CPF em uso...</div>
    {{/if}}
    
    <div id="nav-center">
        <form action="/cadastro/confirm" method="POST" id="form-cad">
            <div id="faixa-cadastro"></div>
            <h2>CADASTRO</h2>
            seu nome:
            <input type="text" class="inputs" required name="name">
            email:
            <input type="text" class="inputs" required name="email">
            CPF:
            <input type="text" class="inputs" required name="CPF">
            crie sua senha:
            <input type="password" class="inputs" required name="pass">
            confirme sua senha:
            <input type="password" class="inputs" required name="pass02">
            <button class="btn-confirm">CRIAR</button>
        </form>
    </div>
    {{#if error01}}
        <div class="msg-error">as senhas não coincidem</div>
    {{/if}}
    {{#if errorName}}
        <div class="msg-error">nome inválido!</div>
    {{/if}}
    {{#if errorCpf}}
        <div class="msg-error">CPF inválido!</div>
    {{/if}}

    <a href="/"><input type="button" value="VOLTAR" id="all-btn"></a>
</div>

